!------------------------------------------------------------
! Gets Date 6 months ago from today
!------------------------------------------------------------
Begin-Procedure Date
    Begin-Sql
        Alter session Set nls_date_format = 'DD-MON-YYYY';
    End-Sql

    Begin-Select
        To_Char(SYSDATE,'DD-Mon-YYYY')      &today
        add_months(trunc(SYSDATE),-6)       &Date / $Date
         from DUAL
    End-Select
End-Procedure !Date

