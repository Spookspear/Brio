Begin-Procedure PutIntoWorkflow
    Let #count=0
    While 1=1
        get $prWF from pr_array(#count) prnum
        If $prWF = '' or #count=199
            Break
        End-If
        Begin-Select
            STATUS  &PR_WF_STATUS
