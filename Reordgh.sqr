        To_Char(EXPIREDATE,'DD-MON-YYYY')    &expiredate
        move &exchangerate to #exchangerate
        move &expiredate to $exchangedate
        from    EXCHANGE
        where CURRENCYCODETO = 'GBP'
        and currencycode=$currencycode
