        move &pr_wf_processid to #pr_wf_processid
        from  MAXVARS
        where VARNAME = 'PR_WF_PROCESSID'
    End-Select

    Begin-Select
        Max(WFID)+1 &WFID
        move &WFID to #WFID
        from  WFINSTANCE
    End-Select

    Begin-Sql
        Update PR Set WFACTIVE = 'Y' where PRNUM = $prWF
    End-Sql

    Begin-Sql
        Update PR Set WFID=#WFID where PRNUM = $prWF
    End-Sql

    Commit
    Begin-Sql
