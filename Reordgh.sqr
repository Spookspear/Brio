Begin-Procedure EndLines ($prnum,$status)
Do debug('EndLINES')

!Print {PONumber} (+1,5)
!Print ' ' (,+1)
!Print $ponum (,+1)
If #PRTOTCOST = 0 And $status='WAPPR'
  !  Print 'PR totalcost is 0.00 - Status Set to WAPPR' (+1,5)
Else
Print {Statusset} (+1,5)
Print ' ' (,+1)
Print $status (,+1)
End-If
If $status <> 'MINVAL' And $_curpostatus = 'MINVAL'
    Print {MinvalMsg} (+1,5)
End-If

End-Procedure !EndLines

